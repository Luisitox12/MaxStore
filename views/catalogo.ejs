<body>

<div class="wrapper">
 <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
         <a href="/" class="navbar-brand">The CombiShop  </a>
           </div>
       </nav>  
  <section id="home" class="sec-main">
    <h1 class="main-heading">Todos nuestros Productos</h1>
  </section>

 <section id="about" class="sec-about">
  <div class="container">

    <% Object.keys(catalogo).forEach(categoria => { %>
        <h2><%= categoria %></h2>
        <div class="row">
            <% catalogo[categoria].forEach(producto => { %>
                <div class="col-md-4">
                    <div class="thumbnail">
                        <img src="<%= producto.imagen %>" alt="" class="img-responsive">
                        <div class="caption">
                            <h3><%= producto.nombre %></h3>
                            <p>Precio: 
                              <% if (producto.categoria_nombre === 'FC Barcelona' || producto.categoria_nombre === 'Real Madrid') { %>
                                  <span style="text-decoration: line-through;">$<%= producto.precio %></span>
                                  <span>$<%= (producto.precio * 0.5).toFixed(2) %> (con descuento)</span>
                              <% } else { %>
                                  $<%= producto.precio %>
                              <% } %>
                          </p>
                            <a href="/catalogo" class="btn btn-success">AÃ±adir al carrito</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% }); %>
</div>
   </section>
<footer id="footer">
     <div class="container">
       <ul class="soc-media-ul">      
         <a href='/'><span>Regresar al Inicio</span></a>
       </ul>
     </div>
   </footer>
 </div>
</body>
