<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/header') %>

    <div class="container">
        <h2 class="mb-4 text-primary">ğŸ“ Estado de Rutas y Monumentos</h2>
        <div class="row">
            <% atractivos.forEach(lugar => { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="<%= lugar.imagen %>" class="card-img-top" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h5 class="card-title m-0"><%= lugar.nombre %></h5>
                                <% if(lugar.estado_ruta === 'Habilitada') { %>
                                    <span class="badge bg-success">Habilitada</span>
                                <% } else { %>
                                    <span class="badge bg-warning text-dark"><%= lugar.estado_ruta %></span>
                                <% } %>
                            </div>
                            <p class="card-text"><%= lugar.descripcion %></p>
                            <a href="<%= lugar.coordenadas %>" target="_blank" class="btn btn-sm btn-outline-primary">Ver Mapa</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>